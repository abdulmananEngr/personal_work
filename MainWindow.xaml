<Window x:Class="ExternalApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExternalApp"
        mc:Ignorable="d"
        Title="MainWindow" Width="800"
        Height="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10">
            <Button x:Name="StartButton" Content="Start" Width="100" Click="StartButton_Click" Margin="5" />
            <Button x:Name="StopButton" Content="Stop" Width="100" Click="StopButton_Click" Margin="5" />
        </StackPanel>

        <Border x:Name="AppContainer" BorderBrush="Gray" BorderThickness="2" Grid.Row="1" Margin="10" Background="White" />
    </Grid>
</Window>
